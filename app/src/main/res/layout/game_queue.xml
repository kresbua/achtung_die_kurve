        android:text="@string/orange"
        app:layout_constraintBottom_toTopOf="@+id/row4_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col2_guideline"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/col21_guideline"
        app:layout_constraintTop_toTopOf="@+id/row3_2_guideline"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/custum_border_colors_items"
        android:backgroundTint="#FF1212"
        android:text="@string/red"
        app:layout_constraintBottom_toTopOf="@+id/row5_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col2_guideline"
        app:layout_constraintStart_toStartOf="@+id/col21_guideline"
        app:layout_constraintTop_toTopOf="@+id/row4_2_guideline" />

    <Button
        android:id="@+id/pink"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/custum_border_colors_items"
        android:backgroundTint="#FF06FB"
        android:text="@string/pink"
        app:layout_constraintBottom_toTopOf="@+id/row6_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col2_guideline"
        app:layout_constraintStart_toStartOf="@+id/col21_guideline"
        app:layout_constraintTop_toTopOf="@+id/row5_2_guideline" />

    <Button
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/custum_border_colors_items"
        android:backgroundTint="#006CFF"
        android:text="@string/blue"
        app:layout_constraintBottom_toTopOf="@+id/row8_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col2_guideline"
        app:layout_constraintStart_toStartOf="@+id/col21_guideline"
        app:layout_constraintTop_toTopOf="@+id/row7_guideline" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/custom_border_players"
        android:fontFamily="@font/retro_gaming"
        android:gravity="center|center_vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="@string/player1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/player1_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col1_guideline"
        app:layout_constraintStart_toStartOf="@+id/content_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/row1_guideline" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="0dp"
