        android:text="@string/points"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/content_top_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/col3_guideline"
        app:layout_constraintStart_toStartOf="@+id/col31_guideline"
        app:layout_constraintTop_toTopOf="@+id/content_top_guideline" />

    <Button
        android:id="@+id/light_green"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/custum_border_colors_items"
