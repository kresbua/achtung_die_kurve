        android:text="@string/reverse"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/row5_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col4_guidelinecontent2"
        app:layout_constraintStart_toStartOf="@+id/col4_guidelinecontent"
