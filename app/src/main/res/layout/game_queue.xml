        app:layout_constraintEnd_toStartOf="@+id/col1_guideline"
        app:layout_constraintStart_toStartOf="@+id/content_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/player4_top_guideline" />

    <Spinner
        android:id="@+id/points_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:fontFamily="@font/retro_gaming"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/row2_guideline"
        app:layout_constraintEnd_toStartOf="@+id/col3_guideline"
