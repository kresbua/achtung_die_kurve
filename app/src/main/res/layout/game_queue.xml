<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".GameQueue">

    <!-- Äußere Guideline Oben -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <!-- Zweite Guideline Oben -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_top_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <!-- Äußere Guideline Unten -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <!-- Äußere Guideline Links -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <!-- Äußere Guideline Rechts -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/content_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <!-- Innere Guideline Players -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32" />

    <!-- Innere Guideline Colors links -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col21_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <!-- Innere Guideline Colors rechts -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />


    <!-- Innere Guideline Points links -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col31_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52" />

    <!-- Innere Guideline Points rechts -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col3_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.69" />

    <!-- Innere Guideline Items links -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col4_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <!-- Innere Guideline Items_Content links -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col4_guidelinecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.72" />

    <!-- Innere Guideline Items_Content rechts -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col4_guidelinecontent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <!-- Innere Guideline Colors-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
