        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:gravity="center|center_vertical"
        android:text="@string/players"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/retro_gaming"
        android:background="@drawable/custom_border_titles"
        app:layout_constraintBottom_toTopOf="@+id/content_top_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/col1_guideline"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/content_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/content_top_guideline"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_border_titles"
        android:fontFamily="@font/retro_gaming"
        android:gravity="center|center_vertical"
        android:text="@string/items"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/content_top_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/content_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/col4_guideline"
        app:layout_constraintTop_toTopOf="@+id/content_top_guideline" />

    <TextView
